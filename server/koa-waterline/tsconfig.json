{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "./*"
            ],
            "waterline": [
                "typings/waterline/index.d.ts"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}